<% form_remote_tag(:url => { :action => "apply_filter" }, :method => :get) do %>
  <table>
    <tr>
      <td>
        <%= "Action status" %><br/>
        <%=select_tag "action_status", options_for_select_filter(ActionStatus.find(:all), action_status ), :onchange=>"document.getElementById ('submit_location_id').click();" %>
      </td>
      <td>
        <%= "Requested by" %><br/>
        <%=select_tag "requested", options_for_select_filter(User.find(:all), requested, true), :onchange=>"document.getElementById ('submit_location_id').click();" %>
      </td>
      <td>
        <%= "Responsible" %><br/>
        <%=select_tag "responsible", options_for_select_filter(User.find(:all), responsible, true ), :onchange=>"document.getElementById ('submit_location_id').click();" %>
      </td>
      <td>
        <table>
          <tr>
            <td colspan="2">Completion date</td>
          </tr>
          <tr>
            <td>from</td>
            <td><%= calendar_date_select_tag "from", from, :size => 10, :maxlength => 10, :onchange=>"document.getElementById ('submit_location_id').click();" %></td>
          </tr>
          <tr>
            <td>to</td>
            <td><%= calendar_date_select_tag "to", to, :size => 10, :maxlength => 10, :onchange=>"document.getElementById ('submit_location_id').click();" %></td>
          </tr>
        </table>
      </td>
      <td>
        <%= link_to_remote "Default filter", :url => { :action => "apply_filter", :action_status => ActionStatus::UNCOMPLETED} %>
        <%#= submit_tag 'Set' %>
        <span style="display:none;"><input type=submit id='submit_location_id'></span>
      </td>
      <%=hidden_field_tag "sortcolumn", params[:sortcolumn] %>
    </tr>
  </table>
<% end %>
