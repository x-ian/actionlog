<% form_remote_tag :url => { :action => "update_requested_by"} do %>
  <%= select_tag :requested_by, create_user_select_tag_options(aktion.requested_by, User.find_all_users_of_meeting(current_meeting), true) %>
  <%= hidden_field_tag :id, aktion.id %>
  <br/>
  <%= submit_tag 'Save' %>
  <%= link_to_remote 'Cancel', :url => {:action => "update_requested_by", :id => aktion } %>
<% end %>
